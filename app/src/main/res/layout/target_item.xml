<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="13px"
    android:layout_marginBottom="13px">


    <TableLayout
        android:layout_width="fill_parent"
        android:stretchColumns="1"
        android:id="@+id/rowItem"
        android:layout_height="wrap_content"

        android:background="#19ffffff">

        <TableRow
            android:layout_width="fill_parent"
            android:padding="26px"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140px"
                android:layout_height="140px"
                android:layout_marginRight="26px"
                android:id="@+id/imageView" />

            <TableLayout
                android:layout_width="0px"
                android:stretchColumns="1"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/row2">


                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="El pablucho lindo"
                                android:textStyle="bold"
                                android:layout_alignParentLeft="true"
                                android:textColor="#ffffff"
                                android:layout_marginBottom="5px"
                                android:id="@+id/user"
                                android:textSize="8pt"
                                android:layout_marginRight="20px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VeganArmy"
                                android:fontFamily="sans-serif-light"
                                android:textStyle="normal"
                                android:textSize="8pt"
                                android:padding="3px"
                                android:textColor="#0090ff"
                                android:background="#66000000"
                                android:layout_marginBottom="5px"
                                android:layout_alignParentLeft="true"
                                android:id="@+id/team" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00h"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            android:textColor="#ffffff"
                            android:layout_marginBottom="20px"
                            android:layout_alignParentRight="true"
                            android:id="@+id/hour"
                            android:layout_marginRight="30px" />


                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#c8c8c8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7pt"
                        android:inputType="textMultiLine"
                        android:paddingRight="45px"
                        android:text="Esto es una prueba de mensaje Esto es una prueba de mensajeEsto es una prueba de mensajeEsto es una prueba de mensajeEsto es una prueba de mensajeEsto es una prueba de mensaje"
                        android:id="@+id/message" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="700px"
                        android:layout_height="400px"
                        android:layout_marginTop="20px"
                        android:id="@+id/youtube"
                        android:visibility="gone"
                        android:layout_column="0" />
                </TableRow>
            </TableLayout>

        </TableRow>
    </TableLayout>
</RelativeLayout>